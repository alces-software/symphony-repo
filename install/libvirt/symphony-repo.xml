<domain type='kvm'>
  <name>symphony-repo.%CLUSTER%</name>
  <memory unit='KiB'>4194304</memory>
  <currentMemory unit='KiB'>4194304</currentMemory>
  <vcpu placement='static'>2</vcpu>
  <os>
    <type arch='x86_64' machine='rhel6.5.0'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/libexec/qemu-kvm</emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='%IMGPATH%/centos7-symphony-repo.qcow2'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='%IMGPATH%/centos7-symphony-director-swap.qcow2'/>
      <target dev='vdb' bus='virtio'/>
    </disk>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='%IMGPATH%/symphony-repo-config.iso'/>
      <target dev='hdb' bus='ide'/>
      <readonly/>
      <address type='drive' controller='0' bus='0' target='0' unit='1'/>
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='%IMGPATH%/symphony-repo-pulp.qcow2'/>
      <target dev='vdc' bus='virtio'/>
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='%IMGPATH%/symphony-repo-mongo.qcow2'/>
      <target dev='vdd' bus='virtio'/>
    </disk>
    <controller type='usb' index='0'>
    </controller>
    <interface type='%BUILDNETWORKTYPE%'>
      <source %BUILDNETWORKTYPE%='%BUILDNETWORKNAME%'/>
      <model type='virtio'/>
    </interface>
    <interface type='%PRIVATENETWORKTYPE%'>
      <source %PRIVATENETWORKTYPE%='%PRIVATENETWORKNAME%'/>
      <model type='virtio'/>
    </interface>
    <interface type='%MANAGEMENTNETWORKTYPE%'>
      <source %MANAGEMENTNETWORKTYPE%='%MANAGEMENTNETWORKNAME%'/>
      <model type='virtio'/>
    </interface>
    <interface type='%DMZNETWORKTYPE%'>
      <source %DMZNETWORKTYPE%='%DMZNETWORKNAME%'/>
      <model type='virtio'/>
    </interface>
    <interface type='%EXTERNALNETWORKTYPE%'>
      <source %EXTERNALNETWORKTYPE%='%EXTERNALNETWORKNAME%'/>
      <model type='virtio'/>
    </interface>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <input type='mouse' bus='ps2'/>
    <graphics type='vnc' port='-1' autoport='yes'/>
    <video>
      <model type='cirrus' vram='9216' heads='1'/>
    </video>
    <memballoon model='virtio'>
    </memballoon>
  </devices>
  <seclabel type='none'/>
</domain>
